function MakeBoard(): Map<[number, number], string> {

    // This function NEEDS to be run just only once at the begging of the game
    
    // Map <array, string>:
    
    // 1. array -> coordinates (x, y)
    // 2. string -> empty or occupaid (player_name) 
    
    const empty_board = new Map<[[number,number], string>;
    for(let i: number = 0; i < 3; i++) {
	for (let j: number = 0; j < 3; j++) {
	    empty_board.set([i, j], "empty");
	}
    }
    return empty_board;
}

